@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "تایید ثبت نام";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a style="font-family:Arial, Helvetica, sans-serif;font-size:large" id="confirm-link" href="@Model.EmailConfirmationUrl">این قسمت را برای فعال کردن اکانت خود کلیک کنید</a>
</p>
    }
    else
    {
<p class="font">
        لطفا ایمیل خود را برای فعال نمودن اکانت چک کنید
</p>
    }
}

